<span id="close-button-edit" class="close">&times;</span>

<h2>Edit Student</h2>
<%= form_with(model: @student_detail, url: student_detail_path(@student_detail), method: :put, remote: true, id: 'editStudentForm') do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <%= hidden_field_tag :page, params[:page] %>

  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :mark %>
    <%= form.number_field :mark, required: true, min: 0 %>
  </div>

  <%= form.submit 'Update', class: 'add-button' %>
<% end %>
<script>
    var closeButtonEdit = document.getElementById("close-button-edit");
    console.log(closeButtonEdit)
    if(closeButtonEdit){ closeButtonEdit.addEventListener('click',() => {
        document.getElementById("editStudentModal").style.display = "none";
    })}
</script>
